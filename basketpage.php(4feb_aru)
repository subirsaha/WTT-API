<?php

$string = $_REQUEST["string"];
$explode = explode("=====", $string);


// echo "<pre>";
// print_r($explode);
// echo "</pre>";



$html = '
				<div class="inner-content">
					<div class="contactInfoHeader">	
						<div class="headerTopBox">
